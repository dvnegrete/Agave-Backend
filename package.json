{
  "name": "agave-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r tsconfig-paths/register dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:init": "bash scripts/init-db.sh",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:generate": "npm run typeorm migration:generate -- -d src/shared/config/datasource.ts",
    "db:deploy": "npm run typeorm migration:run -- -d src/shared/config/datasource.ts",
    "db:dev": "npm run typeorm migration:run -- -d src/shared/config/datasource.ts",
    "db:push": "psql $DATABASE_URL -f bd_initial.sql",
    "db:install-triggers": "bash -c 'set -a && source .env && set +a && psql \"${DATABASE_URL/\\?pgbouncer=true/}\" -f src/shared/database/functions/duplicate_detection.sql'",
    "db:install-indexes": "bash -c 'set -a && source .env && set +a && psql \"${DATABASE_URL/\\?pgbouncer=true/}\" -f src/shared/database/indexes/deposits_unconfirmed_index.sql'",
    "db:setup": "npm run db:install-triggers && npm run db:install-indexes",
    "db:test-triggers": "bash -c 'set -a && source .env && set +a && psql $DATABASE_URL -f src/shared/database/functions/test_duplicate_detection.sql'",
    "db:check-schema": "bash -c 'set -a && source .env && set +a && psql \"${DATABASE_URL/\\?pgbouncer=true/}\" -c \"\\d last_transaction_bank\"'",
    "db:check-transactions": "bash -c 'set -a && source .env && set +a && psql \"${DATABASE_URL/\\?pgbouncer=true/}\" -c \"\\d transactions_bank\"'"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/text-to-speech": "^6.2.0",
    "@google-cloud/translate": "^9.2.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google-cloud/vision": "^5.3.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@supabase/supabase-js": "^2.54.0",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "multer": "^2.0.2",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.26",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
